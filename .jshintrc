{
	"camelcase": true,
	"curly": true,
	"eqeqeq": true,
	"immed": true,
	"latedef": true,
	"newcap": true,
	"supernew": true,
	"shadow": false,
	"noarg": true,
	"noempty": true,
	"nonew": true,
	"quotmark": false, // sometimes double quotes make sense, e.g. "foo's" is better readable than 'foo\'s'
	"trailing": true,
	"undef": true,
	"unused": "vars", // we want to allow unused function parameters
	"laxbreak": true,
	"laxcomma": false,
	"onevar": false,
	"bitwise": true,
	"forin": false,
	"regexp": true,
	"strict": true,
	"scripturl": true,

	// Environment
	"browser": true,

	// Globals
	"predef": [
		"jQuery",
		"QUnit",
		"mediaWiki",
		"wikibase",
		"dataValues",
		"dataTypes",
		"sinon",
		"util",
		"valueFormatters",
		"valueParsers"
	]
}
