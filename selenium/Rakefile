require 'rubygems'
require 'rspec/core/rake_task'

RSpec::Core::RakeTask.new(:all) do |spec|
  spec.ruby_opts = "-I lib:spec"
  spec.pattern = '../repo/tests/selenium/*/*_spec.rb'
end

