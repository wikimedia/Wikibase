#!/bin/bash

. /lib/lsb/init-functions

JR_USER=www-data
JR_SCRIPT=/usr/local/bin/pollchanges.sh
JR_PID_FILE=/var/run/mw-pollchanges.pid
JR_TIMEOUT=300

test -x /usr/bin/php || exit 0

case "$1" in
	start)
		log_daemon_msg "Starting pollforchanges runner"
		start-stop-daemon --start --background --quiet \
			--chuid $JR_USER --nicelevel 20 \
			--make-pidfile --pidfile $JR_PID_FILE \
			--startas $JR_SCRIPT \
			-- -t $JR_TIMEOUT
		log_end_msg $?
		;;
	stop)
		log_daemon_msg "Stopping pollforchanges runner"
		start-stop-daemon --stop --quiet --pidfile $JR_PID_FILE --retry 60
		log_end_msg $?
		;;
	restart|force-reload)
		log_daemon_msg "Restarting pollforchanges runner"
		start-stop-daemon --stop --quiet --pidfile $JR_PID_FILE --retry 60
		start-stop-daemon --start --background --quiet \
			--chuid $JR_USER --nicelevel 20 \
			--make-pidfile --pidfile $JR_PID_FILE \
			--startas $JR_SCRIPT \
			-- -t $JR_TIMEOUT
		log_end_msg $?
		;;
	graceful|reload)
		log_daemon_msg "Gracefully restarting pollforchanges runner"
		start-stop-daemon --stop --signal HUP --quiet --pidfile $JR_PID_FILE --retry 60
		start-stop-daemon --start --background --quiet \
			--chuid $JR_USER --nicelevel 20 \
			--make-pidfile --pidfile $JR_PID_FILE \
			--startas $JR_SCRIPT \
		log_end_msg $?
		;;
	*)
		log_action_msg "Usage: /etc/init.d/pollchanges {start|stop|restart|reload|force-reload|graceful}"
		exit 2
		;;
esac

exit 0
