{
  "name": "data-bridge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "npm-run-all build:*",
    "build:app": "NODE_ENV=production vue-cli-service build",
    "build:init": "tsc src/mediawiki/data-bridge.init.ts --outDir dist/",
    "fix": "vue-cli-service lint .",
    "test": "npm-run-all test:*",
    "test:lint": "vue-cli-service lint --no-fix . && stylelint --syntax scss 'src/**/*.(vue|scss)'",
    "test:unit": "vue-cli-service test:unit",
	"test:distnodiff": "npm run build:app -- --dest /tmp/dist && npm run build:init -- --outDir /tmp/dist && diff -q ./dist/data-bridge.app.js /tmp/dist/data-bridge.app.js && diff -q ./dist/data-bridge.app.css /tmp/dist/data-bridge.app.css && diff -q ./dist/data-bridge.init.js /tmp/dist/data-bridge.init.js",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "vue": "^2.6.10",
    "vue-class-component": "^6.0.0",
    "vue-property-decorator": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@storybook/addon-actions": "^5.1.8",
    "@storybook/addon-links": "^5.1.8",
    "@storybook/addons": "^5.1.8",
    "@storybook/vue": "^5.1.8",
    "@types/jest": "^23.1.4",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-unit-jest": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-preset-vue": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-config-wikimedia": "^0.12.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-vue": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^10.1.0",
    "stylelint-config-wikimedia": "^0.6.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^3.8.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.1",
    "vue-cli-plugin-typescript": "0.0.1",
    "vue-template-compiler": "^2.6.10"
  }
}
