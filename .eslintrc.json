{
	"root": true,
	"extends": ["wikimedia/client", "wikimedia/jquery"],
	"env": {
		"browser": true
	},
	"globals": {
		"mw": false,
		"$": false,
		"module": false,
		"dataTypes": false,
		"dataValues": false,
		"OO": false,
		"require": false,
		"util": false,
		"valueFormatters": false,
		"valueParsers": false,
		"wikibase": false
	},
	"rules": {
		"compat/compat": "error",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1,
				"MemberExpression": "off"
			}
		],
		"max-len": "off",
		"new-cap": "off",
		"no-underscore-dangle": "off",
		"no-use-before-define": [
			"error",
			"nofunc"
		],
		"no-unused-vars": [
			"error",
			{
				"args": "none"
			}
		],
		"no-useless-concat": "off",
		"one-var": "off",
		"operator-linebreak": "off",
		"valid-jsdoc": "off",
		"vars-on-top": "off",
		"jquery/no-trim": "off",
		"jquery/no-grep": "off",
		"jquery/no-is-function": "off",
		"jquery/no-in-array": "off",
		"jquery/no-map-util": "off",
		"jquery/no-each-util": "off",
		"max-statements-per-line": "off"
	},
	"plugins": [
		"compat"
	]
}
